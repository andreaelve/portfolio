{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/github",
        "run": {
          "serviceId": "portfolio-backend",
          "region": "europe-north1"
        }
      }
    ]
  }
}
